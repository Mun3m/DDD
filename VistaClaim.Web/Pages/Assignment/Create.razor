@page "/assignment/create/{ClientId:guid}"
<h4 class="assignment-header">New Assignment</h4>

<EditForm Model="@assignment" OnValidSubmit="@HandleValidSubmit">
    <FluentValidationValidator />

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="claimNumber">Claim Number</label>
            <InputText class="form-control" id="claimNumber" @bind-Value="@assignment.ClaimNumber" />
            <ValidationMessage For="@(() => assignment.ClaimNumber)" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</EditForm>
